#!/bin/sh
#==============================================================================#
# Author: Scott MacDonald
# Purpose: Copy the current directory to the clipboard.
# Usage: ./cpwd
#==============================================================================#
# vim: set filetype=sh :
set -e
set -u

# shellcheck disable=SC3040
(set -o pipefail 2> /dev/null) && set -o pipefail

pwd | tr -d '\n' | ccopy
