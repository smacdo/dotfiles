[user]
    name = Scott MacDonald
    email = scott@smacdo.com

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[log]
    date = relative

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[include]
    path = ~/.my_gitconfig
